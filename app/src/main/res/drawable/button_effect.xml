        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="@color/color_btn_bg2" />
            <stroke android:width="0.7dp" android:color="@color/containerColor" />
            <corners android:radius="8dp">

            </corners>
        </shape>
    </item>
